<%= form_with(model: disciplina, :html => { :class => "form-horizontal" }, local: true) do |form| %>
  <% if @disciplina.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <div class="alert-heading">
        <h3 class="alert-title"><%= pluralize(@disciplina.errors.count, t('error')) %> <%= pluralize_without_count(@disciplina.errors.count, t('found')) %>:</h3>
      </div>
      <div class="alert-body">
        <ul>
        <% @disciplina.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :nome, t('nome') %>
    <%= form.text_field :nome, id: :disciplina_nome, :class => "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :codigo, t('codigo') %>
    <%= form.text_field :codigo, id: :disciplina_codigo, :class => "form-control" %>
  </div>

  <div class="form-check">
    <%= form.check_box :ativo, id: :disciplina_ativo, :class => "form-check-input" %>
    <%= form.label :ativo, t('ativo'), :class => "form-check-label" %>
  </div>

  <div class="form-group mt-2">
    <%= form.submit t('.save', :default => t('helpers.links.save')), :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t('helpers.links.cancel')),
      disciplinas_path, :class => 'btn btn-secondary' %>
  </div>
<% end %>
