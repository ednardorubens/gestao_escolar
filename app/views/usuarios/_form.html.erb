<%= form_with(model: usuario, :html => { :class => "form-horizontal" }, local: true) do |form| %>
  <% if @usuario.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <div class="alert-heading">
        <h3 class="alert-title"><%= pluralize_with_count(@usuario.errors.count, t('error')) %>:</h3>
      </div>
      <div class="alert-body">
        <ul>
        <% @usuario.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :nome, t('nome') %>
    <%= form.text_field :nome, id: :usuario_nome, :class => "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :email, t('email') %>
    <%= form.text_field :email, id: :usuario_email, :class => "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :password, t('password') %>
    <%= form.password_field :password, id: :usuario_password, :class => "form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :password_confirmation, t('password_confirmation') %>
    <%= form.password_field :password_confirmation, id: :usuario_password_confirmation, :class => "form-control" %>
  </div>

  <div class="form-check">
    <%= form.check_box :ativo, id: :usuario_ativo, :class => "form-check-input" %>
    <%= form.label :ativo, t('ativo'), :class => "form-check-label" %>
  </div>

  <div class="form-group mt-2">
    <%= form.submit t('.save', :default => t('helpers.links.save')), :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t('helpers.links.cancel')),
      usuarios_path, :class => 'btn btn-secondary' %>
  </div>
<% end %>
